# This is Git's per-user configuration file.
[user]
	email = {{ .email }}
	name = {{ .name }}
[core]
  	editor = code --wait
[diff]
  	tool = vscode
[difftool "vscode"]
  	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  	tool = vscode
[mergetool "vscode"]
  	cmd = code --wait $MERGED
[push]
	autoSetupRemote = true
[safe]
	directory = *
